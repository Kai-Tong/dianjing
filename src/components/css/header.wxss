}
.headerseles_more_div {
  position: absolute;
  left: 30px;
  bottom: -50px;
  background-image: linear-gradient(#1e1e23, #1e1e23), linear-gradient(#f0d38f, #f0d38f);
}
.headerseles_more {
  color: #fff;
  font-size: 14px;
  width: 60px;
