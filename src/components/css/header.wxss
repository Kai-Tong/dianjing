}
.headerlogin_div {
  margin-left: 22px;
  display: flex;
  align-items: center;
  font-size: 20px;
  color: #fdfdfe;
}
.headerlogin_div a {
  color: #fdfdfe;
  margin: 0 10px;
}
.headerlogin_div a:hover {
  color: #f0d38f;
}
.headerlogin_div_center {
  display: flex;
  align-items: center;
  font-size: 20px;
  color: #f0d38f;
  margin: 0 20px;
}
.Avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.user_name {
  width: 90px;
}
.login_exit {
  color: #f0d38f;
  border: 1px  solid #f0d38f;
  font-size: 16px;
  width: 50px;
  text-align: center;
  padding: 5px 0;
  border-radius: 4px;
}
.login_exit:hover {
